{
  "examples": [
    {
      "title": "Validate Customer Data",
      "description": "Validate a CSV file of customer data against a schema",
      "command": "python scripts/process.py --input customers.csv --output validation.json --operation validate --schema customer_schema.json",
      "input": {
        "file": "customers.csv",
        "format": "csv",
        "sample": "id,name,email,age\n1,Alice,alice@example.com,30\n2,Bob,bob@example.com,25"
      },
      "schema": {
        "fields": [
          {"name": "id", "type": "integer", "required": true, "unique": true},
          {"name": "name", "type": "string", "required": true},
          {"name": "email", "type": "string", "required": true, "pattern": "^[^@]+@[^@]+\\.[^@]+$"},
          {"name": "age", "type": "integer", "required": false, "min": 0, "max": 150}
        ]
      },
      "output": {
        "valid": true,
        "errors": [],
        "warnings": [],
        "record_count": 2
      }
    },
    {
      "title": "Convert CSV to JSON",
      "description": "Transform a CSV file to JSON format",
      "command": "python scripts/process.py --input sales.csv --output sales.json --operation transform --format json",
      "input": {
        "file": "sales.csv",
        "format": "csv",
        "sample": "date,product,quantity,price\n2024-01-01,Widget,10,9.99\n2024-01-02,Gadget,5,19.99"
      },
      "output": {
        "records": [
          {"date": "2024-01-01", "product": "Widget", "quantity": 10, "price": 9.99},
          {"date": "2024-01-02", "product": "Gadget", "quantity": 5, "price": 19.99}
        ],
        "count": 2
      }
    },
    {
      "title": "Check Data Quality",
      "description": "Analyze data quality and identify issues",
      "command": "python scripts/process.py --input users.csv --output quality.json --operation quality-check",
      "input": {
        "file": "users.csv",
        "format": "csv",
        "sample": "id,name,email,phone\n1,Alice,alice@example.com,555-1234\n2,Bob,bob@example.com,\n3,Charlie,,555-5678\n2,Bob,bob@example.com,555-9999"
      },
      "output": {
        "total_records": 4,
        "missing_values": {
          "email": 1,
          "phone": 1
        },
        "duplicates": 1,
        "duplicate_records": [
          {"id": 2, "count": 2}
        ],
        "outliers": {}
      }
    },
    {
      "title": "Filter and Transform",
      "description": "Filter records and transform to different format",
      "command": "python scripts/process.py --input orders.json --output filtered.csv --operation transform --format csv",
      "input": {
        "file": "orders.json",
        "format": "json",
        "sample": {
          "orders": [
            {"id": 1, "status": "completed", "total": 100.00},
            {"id": 2, "status": "pending", "total": 50.00},
            {"id": 3, "status": "completed", "total": 75.00}
          ]
        }
      },
      "output": {
        "format": "csv",
        "sample": "id,status,total\n1,completed,100.00\n2,pending,50.00\n3,completed,75.00"
      }
    },
    {
      "title": "Validate with Complex Schema",
      "description": "Validate data with multiple constraints",
      "command": "python scripts/process.py --input products.csv --output validation.json --operation validate --schema product_schema.json",
      "input": {
        "file": "products.csv",
        "format": "csv",
        "sample": "sku,name,category,price,stock\nWID-001,Widget,Electronics,9.99,100\nGAD-002,Gadget,Electronics,19.99,50"
      },
      "schema": {
        "fields": [
          {"name": "sku", "type": "string", "required": true, "unique": true, "pattern": "^[A-Z]{3}-\\d{3}$"},
          {"name": "name", "type": "string", "required": true, "min_length": 1, "max_length": 100},
          {"name": "category", "type": "string", "required": true, "enum": ["Electronics", "Clothing", "Food"]},
          {"name": "price", "type": "float", "required": true, "min": 0.01, "max": 10000.00},
          {"name": "stock", "type": "integer", "required": true, "min": 0}
        ]
      },
      "output": {
        "valid": true,
        "errors": [],
        "warnings": [],
        "record_count": 2
      }
    },
    {
      "title": "Detect Outliers",
      "description": "Identify statistical outliers in numeric data",
      "command": "python scripts/process.py --input measurements.csv --output quality.json --operation quality-check",
      "input": {
        "file": "measurements.csv",
        "format": "csv",
        "sample": "id,temperature,humidity\n1,20.5,45\n2,21.0,50\n3,150.0,48\n4,20.8,200"
      },
      "output": {
        "total_records": 4,
        "missing_values": {},
        "duplicates": 0,
        "outliers": {
          "temperature": [150.0],
          "humidity": [200]
        },
        "statistics": {
          "temperature": {"mean": 53.075, "median": 20.9, "std": 56.2},
          "humidity": {"mean": 85.75, "median": 49.0, "std": 67.8}
        }
      }
    }
  ],
  "common_patterns": [
    {
      "pattern": "Validate then Transform",
      "description": "Always validate data before transformation to catch errors early",
      "steps": [
        "1. Run validation: --operation validate --schema schema.json",
        "2. Review validation report",
        "3. Fix any errors in source data",
        "4. Run transformation: --operation transform --format json"
      ]
    },
    {
      "pattern": "Quality Check First",
      "description": "Check data quality before processing to understand issues",
      "steps": [
        "1. Run quality check: --operation quality-check",
        "2. Review missing values and duplicates",
        "3. Clean data if needed",
        "4. Proceed with validation and transformation"
      ]
    },
    {
      "pattern": "Iterative Processing",
      "description": "Process data in stages with validation at each step",
      "steps": [
        "1. Quality check on raw data",
        "2. Clean and fix issues",
        "3. Validate against schema",
        "4. Transform to target format",
        "5. Final quality check on output"
      ]
    }
  ]
}
